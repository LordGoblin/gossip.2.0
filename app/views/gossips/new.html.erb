<div class="d-flex flex-column text-center">
	<div>
		<h1 class="pt-3 pb-3 text-success">Create gossip</h1>
	</div>
	<div>
		<%= form_tag url_for(action: 'create'), method: "post" do %>
			<div class="border border-dark bg-success pt-3 pb-3 text-warning">
			    <%= label_tag 'Title' %>   
			    <%= text_field_tag 'title' %>
			    <br /> <br />

			    <%= label_tag 'content' %>
			    <%= text_area_tag 'body' %>
			    <br /> <br />

			    <%= submit_tag "Create gossip" %>
		    </div>
		<% end %>
	</div>
</div>

 